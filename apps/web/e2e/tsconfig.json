{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "../../..",
    "paths": {
      "@playwright/test": ["node_modules/@playwright/test"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
