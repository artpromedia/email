{
  "name": "@ceerion/api",
  "version": "1.0.0",
  "private": true,
  "description": "CEERION Mail API server",
  "main": "dist/server.js",
  "scripts": {
    "build": "prisma generate && tsc",
    "dev": "prisma generate && tsx watch src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "pnpx tsx tests/rules/rules-engine-unit-tests.ts",
    "test:integration": "echo 'Run integration tests with database'",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@ceerion/contracts": "workspace:*",
    "@ceerion/observability": "workspace:*",
    "@ceerion/sdk": "workspace:*",
    "@ceerion/shared": "workspace:*",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/redis": "^7.0.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.0.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@prisma/client": "^5.0.0",
    "argon2": "^0.31.0",
    "bullmq": "^5.0.0",
    "dotenv": "^16.0.0",
    "fastify": "^4.0.0",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^2.0.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "nanoid": "^5.0.0",
    "prisma": "^5.0.0",
    "tsx": "^4.20.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@ceerion/config": "workspace:*",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.19.11",
    "nodemon": "^3.1.10",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
