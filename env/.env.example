# CEERION Mail Environment Variables
# Copy this file to .env in each app directory and customize as needed

# Brand Configuration
BRAND_NAME=CEERION
BASE_DOMAIN=mail.ceerion.com

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:15432/ceerion_mail

# Redis Configuration
REDIS_URL=redis://localhost:16379

# JWT Configuration
JWT_PRIVATE_KEY=dev-only-rs256-key

# OAuth/OIDC Configuration
OIDC_GOOGLE_CLIENT_ID=__placeholder__
OIDC_GOOGLE_CLIENT_SECRET=__placeholder__

# API Configuration
API_PORT=4000
API_HOST=localhost

# Development
NODE_ENV=development
