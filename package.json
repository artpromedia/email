{
  "name": "@ceerion/mail-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CEERION Mail - Backend-first monorepo",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:smoke": "turbo run test:smoke",
    "test:lighthouse": "turbo run test:lighthouse",
    "test:a11y": "turbo run test:a11y",
    "test:contract-drift": "turbo run test:contract-drift",
    "typecheck": "turbo run typecheck",
    "dev:infra": "docker compose -f docker-compose.dev.yml up -d",
    "stop:infra": "docker compose -f docker-compose.dev.yml down -v",
    "monitoring:up": "docker compose -f docker-compose.monitoring.yml up -d",
    "monitoring:down": "docker compose -f docker-compose.monitoring.yml down -v",
    "mail:setup": "node scripts/mail/setup-mail-transport.js",
    "mail:start": "docker compose -f docker-compose.mail.yml up -d",
    "mail:stop": "docker compose -f docker-compose.mail.yml down -v",
    "mail:logs": "docker compose -f docker-compose.mail.yml logs -f",
    "mail:build": "docker compose -f docker-compose.mail.yml build",
    "mail:test": "node scripts/mail/test-mail-stack.js",
    "backup:run": "docker compose -f docker-compose.mail.yml exec mail-backup /backup/scripts/backup.sh",
    "backup:restore": "docker compose -f docker-compose.mail.yml exec mail-backup /backup/scripts/restore.sh",
    "backup:drill": "docker compose -f docker-compose.mail.yml exec mail-backup /backup/scripts/test-restore.sh",
    "openapi:codegen": "pnpm --filter @ceerion/sdk run generate",
    "openapi:check": "pnpm --filter @ceerion/contracts run openapi:check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
