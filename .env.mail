# CEERION Mail Transport Environment Configuration
# Production deployment settings

# Domain Configuration
MAIL_DOMAIN=ceerion.com
MAIL_HOSTNAME=mail.ceerion.com

# Database Configuration
POSTGRES_PASSWORD=ceerion_secure_2024_prod
POSTGRES_DB=ceerion_mail
POSTGRES_USER=ceerion

# Redis Configuration  
REDIS_PASSWORD=ceerion_redis_2024_prod

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_chars

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# S3 Backup Configuration
S3_BACKUP_BUCKET=ceerion-mail-backups-prod
KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012

# Encryption Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here_64_chars_minimum

# TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/mail.ceerion.com.crt
SSL_KEY_PATH=/etc/ssl/private/mail.ceerion.com.key

# DKIM Configuration  
DKIM_SELECTOR=ceerion
DKIM_DOMAIN=ceerion.com

# Rate Limiting
RATE_LIMIT_PER_IP=100
RATE_LIMIT_PER_USER=1000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
RETENTION_DAYS=30

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true

# Performance Configuration
MAX_MESSAGE_SIZE=52428800
MAX_ATTACHMENT_SIZE=25165824
QUEUE_DWELL_TIME_TARGET=60
