{
  "name": "ceerion-mail-transport",
  "version": "1.0.0",
  "description": "CEERION Mail Transport Stack - SMTP/IMAP/JMAP with encrypted backups",
  "scripts": {
    "mail:start": "docker-compose -f docker-compose.mail.yml up -d",
    "mail:stop": "docker-compose -f docker-compose.mail.yml down",
    "mail:logs": "docker-compose -f docker-compose.mail.yml logs -f",
    "mail:build": "docker-compose -f docker-compose.mail.yml build",
    "backup:run": "docker-compose -f docker-compose.mail.yml exec mail-backup /backup/scripts/backup.sh",
    "backup:restore": "docker-compose -f docker-compose.mail.yml exec mail-backup /backup/scripts/restore.sh",
    "backup:test": "docker-compose -f docker-compose.mail.yml exec mail-backup /backup/scripts/test-restore.sh",
    "mail:setup": "node scripts/setup-mail-transport.js",
    "mail:test": "node scripts/test-mail-stack.js",
    "dkim:generate": "node scripts/generate-dkim-keys.js",
    "ssl:generate": "node scripts/generate-ssl-certs.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-kms": "^3.450.0",
    "nodemailer": "^6.9.7",
    "imap": "^0.8.19",
    "uuid": "^9.0.1",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/imap": "^0.8.38",
    "@types/uuid": "^9.0.7",
    "@types/bcrypt": "^5.0.2"
  }
}
