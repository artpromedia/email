# CEERION Mail Transport Environment Configuration
# Local Development Environment

# ==============================================
# DOMAIN CONFIGURATION
# ==============================================
MAIL_DOMAIN=ceerion.com
MAIL_HOSTNAME=mail.ceerion.com

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=ceerion
POSTGRES_PASSWORD=ceerion_secure_2024
POSTGRES_DB=ceerion_mail
POSTGRES_HOST=postgres-mail

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=redis-mail
REDIS_PASSWORD=ceerion_redis_2024

# ==============================================
# DKIM CONFIGURATION
# ==============================================
DKIM_SELECTOR=ceerion

# ==============================================
# BACKUP CONFIGURATION (OPTIONAL FOR LOCAL)
# ==============================================
AWS_ACCESS_KEY_ID=local_development
AWS_SECRET_ACCESS_KEY=local_development
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=ceerion-mail-backups-local
KMS_KEY_ID=local_development
BACKUP_ENCRYPTION_KEY=local_development_key_not_secure

# ==============================================
# TLS CONFIGURATION
# ==============================================
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# ==============================================
# PERFORMANCE TUNING
# ==============================================
POSTFIX_MAX_CONNECTIONS=100
DOVECOT_MAX_LOGINS=100
RSPAMD_WORKERS=4

# ==============================================
# SECURITY SETTINGS
# ==============================================
ENABLE_DKIM=true
ENABLE_DMARC=true
ENABLE_SPF=true
ENABLE_MTA_STS=true
ENABLE_TLS_RPT=true

# ==============================================
# MONITORING
# ==============================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info
