<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!--
    OWASP Dependency Check Suppression File

    This file contains false positives and accepted risks.
    Each suppression should be documented with:
    - Reason for suppression
    - Date reviewed
    - Reviewer
    -->

    <!-- Example suppression format:
    <suppress>
        <notes><![CDATA[
            Description: Brief description of why this is suppressed
            Reviewed: YYYY-MM-DD
            Reviewer: Name
            Ticket: JIRA-123
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/package-name@.*$</packageUrl>
        <cve>CVE-YYYY-NNNNN</cve>
    </suppress>
    -->

    <!-- Development-only dependencies that don't affect production -->
    <suppress>
        <notes><![CDATA[
            Description: Test framework vulnerabilities do not affect production
            Reviewed: 2025-01-01
            Reviewer: Security Team
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/(jest|mocha|chai|sinon)@.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>

    <!-- False positives - package name collisions -->
    <suppress>
        <notes><![CDATA[
            Description: False positive due to package name collision
            Reviewed: 2025-01-01
            Reviewer: Security Team
            Notes: This CVE applies to a different package with the same name
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/debug@.*$</packageUrl>
        <cpe>cpe:/a:debug_project:debug</cpe>
    </suppress>

</suppressions>
